<%= render 'layouts/admin_header' %>


<h4>ゲーム一覧</h4>

<table>
　  <% @games.each do |game| %>
     <tr>
        <td><%= link_to admin_game_path(game.id) do %><%= game.title %><% end %></td>
        <td>
            <% if game.package_image.attached? %>
                <%= image_tag game.package_image, size: '150x150'   %>
            <% end %>
        </td>
        <td><%= link_to "削除", admin_game_path(game), method: :delete %></td>
     </tr>
    <% end %>
</table>

<a href="/admin/games/new">ゲーム追加</a>
