<%= render 'layouts/admin_header' %>

<h4>ジャンル一覧</h4>

<table>
  <th>ID</th>
  <th>NAME</th>
  <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.id %></td>
      <td><%= genre.genre_name %></td>
      <td><%= link_to "削除", admin_genre_path(genre), method: :delete %></td>
    </tr>
  <% end %>
</table>

<a href="/admin/genres/new">ジャンル追加</a>