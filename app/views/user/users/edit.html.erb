<%= render 'layouts/user_header' %>

<div class="col-lg-10 main-top">
  <div class="col-sm-10 col-md-8 col-lg-7 mx-auto m-3 p-5 login-form border-box">
    <div class="row">
      <h2>プロフィール編集</h2>
    </div>
      
    <div>
      <%= form_with model: @user, url: user_user_path do |f| %>
        <div class="form_group">
          <br>
            <label for="inputName">ユーザー名</label>
              <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"ユーザー名"%>
          </br>
          </div>
          
          <div class="form_group">
            <br>
              <label for="inputImage">ユーザー画像</label>
              <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          
          <div class="actions text-center mt-5">
            <%= f.submit "変更を保存", class: "btn btn-secondary rounded-pill" %>
          </div>
         
          
      <% end %>
        
        
    </div>
  </div>
</div>



<%= render 'layouts/footer' %>