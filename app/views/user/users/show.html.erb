<%= render 'layouts/user_header' %>

<h2>ユーザー名</h2>
<%= @user.name %>


<h2>ユーザー画像</h2>
  <% if @user.profile_image.attached? %>
    <%= image_tag @user.profile_image, size: '320x240'  %>
  <% end %>

<h2>メールアドレス</h2>
<%= @user.email %>

<li>
  <%= link_to edit_user_user_path(current_user), class: "nav-link text-dark" do %>
    <span>プロフィール編集</span>
  <% end %>
</li>


<% if user_signed_in? && @user == current_user %>
  <% unless @user.email == "test@example.com" then %>
     <div class="mt-3">
        <%= link_to "退会",user_user_path(current_user.id), class: "destroy-user", method: :delete, "data-confirm" => "本当に退会しますか？" %>
     </div>
  <% end %>
<% end %>